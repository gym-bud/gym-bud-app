doctype html
html
   head
      block title
         title gym-bud
   body
      block header
         div#header
            a(href="/") home
            |  
            a(href="/users") users
            |  
            a(href="/organizations") organizations
            |  
            if user
               span Logged in as: #[a(href="/me") #{user.name}] (#{user.email}, isAdmin = #{user.isAdmin} ) 
               |  
               a(href="/logout") logout
            else
               a(href="/login") login
               |  
               a(href="/register") register

      block errors
         if errors 
            ul
               each error in errors
                  li=(error && error.message) || error

      block msgs 
         if msgs 
            ul
               each msg in msgs 
                  li=msg

      block content
         h1 gym-bud

      div#footer
         p gym-bud (c) 2015
